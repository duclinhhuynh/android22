<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FAF7F7"
    >

<RelativeLayout
    android:layout_marginTop="5dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    >

    <RelativeLayout
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_food"
            android:alpha="0.1"
            android:tint="#77000000"
            android:elevation="2dp"
             />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/bg_food" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imgShape"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:src="@drawable/ramen" />
    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="45dp"
        android:layout_height="45dp"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/bg_right"

            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.1"
            android:background="@drawable/bg_food"

            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@drawable/right"
            android:tint="#F75F71"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="120dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="2dp"
        >
        <TextView
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text="ramen"
            android:textAllCaps="true"
            android:gravity="bottom"
            android:textColor="#000"
            android:paddingBottom="1dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/plankiss"
            android:textSize="25dp"
            android:layout_weight="1"/>
    <TextView
        android:id="@+id/Detail"
        android:layout_width="match_parent"
        android:text="30 item"
        android:textSize="15sp"
        android:paddingLeft="20dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:textColor="#989898"/>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>